<!DOCTYPE html>

<html>
    <head>
        <meta charset="UTF-8">
        <title>SportTracker - {% if workout %}{{ gettext('Edit Biking Workout') }}{% else %}{{ gettext('New Biking Workout') }}{% endif %}</title>
        {% import 'macros.jinja2' as macros with context %}
        {{ macros.header() }}
    </head>
    <body class="bg-dark text-light">
        {{ macros.navbar('tracks') }}

        {% import 'workouts/workoutMacros.jinja2' as workoutMacros with context %}

        <div id="main" class="center-align">
            <section class="py-5 text-center container">
                <div class="row">
                    <div class="col col-12 mx-auto">
                        {% if workout %}
                            {% call macros.headline(gettext('Edit Biking Workout')) %}
                                <span class="material-symbols-outlined filled fs-1">directions_bike</span>
                            {% endcall %}
                            <button type="button" class="btn btn-danger mt-3 d-flex align-items-center mx-auto" data-bs-toggle="modal" data-bs-target="#delete-modal-0">
                                <span class="material-symbols-outlined filled text-light">delete</span>&nbsp;{{ gettext('Delete') }}
                            </button>

                            {% call macros.deleteModal(gettext('Delete Workout?'), gettext('Do you really want to delete the track "%(name)s" (ID: %(id)d)?', name=workout.name, id=workout_id)) %}
                                <a href="{{ url_for('distanceWorkouts.delete', workout_id=workout_id) }}" class="btn btn-danger">{{ gettext('Delete') }}</a>
                            {% endcall %}
                        {% else %}
                            {% call macros.headline(gettext('New Biking Workout')) %}
                                <span class="material-symbols-outlined filled fs-1">directions_bike</span>
                            {% endcall %}
                        {% endif %}
                    </div>
                </div>

                <div class="row mt-5 text-start">
                    <div class="col col-11 col-md-9 mx-auto">
                        <form role="form" action="{% if workout %}{{ url_for('distanceWorkouts.editPost', workout_id=workout_id) }}{% else %}{{ url_for('distanceWorkouts.addPost') }}{% endif %}"
                              method="post"
                              enctype=multipart/form-data>

                            <input type="hidden" class="form-control" id="track-type" name="type" value="BIKING">

                            {{ workoutMacros.track_form_name(workout, workoutNames) }}

                            {{ workoutMacros.track_form_start_time(workout) }}

                            {{ workoutMacros.track_form_distance(workout) }}

                            {{ workoutMacros.track_form_duration(workout) }}

                            {{ workoutMacros.track_form_average_heart_rate(workout) }}

                            {{ workoutMacros.track_form_elevation_sum(workout) }}

                            {% for field in customFields %}
                                {{ workoutMacros.track_form_custom_field_input(field) }}
                            {% endfor %}

                            {{ workoutMacros.track_form_participants(workout, participants) }}

                            {{ workoutMacros.track_form_gpx(workout, workout_id) }}

                            {{ workoutMacros.form_linked_planned_tour(workout, plannedTours) }}

                            {{ workoutMacros.form_share_link(workout, 'maps.showSharedSingleWorkout', 'distanceWorkouts.createShareCode')}}

                            <button type="submit" id="buttonSaveWorkout" class="btn btn-success mt-5 input-field-margin d-flex align-items-center"><span class="material-symbols-outlined filled text-light">save</span>&nbsp;{{ gettext('Save') }}</button>
                        </form>
                    </div>
                </div>
            </section>
        </div>

        {{ macros.scripts() }}
        <script src="{{ url_for('static', filename='js/libs/jquery.min.js') }}" type="text/javascript"></script>
        <script src="{{ url_for('static', filename='js/libs/bootstrap-autocomplete.min.js') }}" type="text/javascript"></script>
        <script>
             $('#track-name').autocomplete()
        </script>
    </body>
</html>
