<!DOCTYPE html>

<html>
    <head>
        <meta charset="UTF-8">
        <title>SportTracker - {% if sport %}{{ gettext('Edit Biking Track') }}{% else %}{{ gettext('New Biking Track') }}{% endif %}</title>
        {% import 'macros.jinja2' as macros with context %}
        {{ macros.header() }}
    </head>
    <body class="bg-dark text-light">
        {{ macros.navbar('tracks') }}

        {% import 'sports/sportMacros.jinja2' as sportMacros with context %}

        <div id="main" class="center-align">
            <section class="py-5 text-center container">
                <div class="row">
                    <div class="col col-12 mx-auto">
                        {% if sport %}
                            {% call macros.headline(gettext('Edit Biking Track')) %}
                                <span class="material-symbols-outlined filled fs-1">directions_bike</span>
                            {% endcall %}
                            <button type="button" class="btn btn-danger mt-3 d-flex align-items-center mx-auto" data-bs-toggle="modal" data-bs-target="#delete-modal-0">
                                <span class="material-symbols-outlined filled text-light">delete</span>&nbsp;{{ gettext('Delete') }}
                            </button>

                            {% call macros.deleteModal(gettext('Delete Track?'), gettext('Do you really want to delete the track "%(name)s" (ID: %(id)d)?', name=sport.name, id=sport_id)) %}
                                <a href="{{ url_for('distanceSports.delete', sport_id=sport_id) }}" class="btn btn-danger">{{ gettext('Delete') }}</a>
                            {% endcall %}
                        {% else %}
                            {% call macros.headline(gettext('New Biking Track')) %}
                                <span class="material-symbols-outlined filled fs-1">directions_bike</span>
                            {% endcall %}
                        {% endif %}
                    </div>
                </div>

                <div class="row mt-5 text-start">
                    <div class="col col-11 col-md-9 mx-auto">
                        <form role="form" action="{% if sport %}{{ url_for('distanceSports.editPost', sport_id=sport_id) }}{% else %}{{ url_for('distanceSports.addPost') }}{% endif %}"
                              method="post"
                              enctype=multipart/form-data>

                            <input type="hidden" class="form-control" id="track-type" name="type" value="BIKING">

                            {{ sportMacros.track_form_name(sport, sportNames) }}

                            {{ sportMacros.track_form_start_time(sport) }}

                            {{ sportMacros.track_form_distance(sport) }}

                            {{ sportMacros.track_form_duration(sport) }}

                            {{ sportMacros.track_form_average_heart_rate(sport) }}

                            {{ sportMacros.track_form_elevation_sum(sport) }}

                            {% for field in customFields %}
                                {{ sportMacros.track_form_custom_field_input(field) }}
                            {% endfor %}

                            {{ sportMacros.track_form_participants(sport, participants) }}

                            {{ sportMacros.track_form_gpx(sport, sport_id) }}

                            {{ sportMacros.form_linked_planned_tour(sport, plannedTours) }}

                            {{ sportMacros.form_share_link(sport, 'maps.showSharedSingleTrack', 'distanceSports.createShareCode')}}

                            <button type="submit" id="buttonSaveTrack" class="btn btn-success mt-5 input-field-margin d-flex align-items-center"><span class="material-symbols-outlined filled text-light">save</span>&nbsp;{{ gettext('Save') }}</button>
                        </form>
                    </div>
                </div>
            </section>
        </div>

        {{ macros.scripts() }}
        <script src="{{ url_for('static', filename='js/libs/jquery.min.js') }}" type="text/javascript"></script>
        <script src="{{ url_for('static', filename='js/libs/bootstrap-autocomplete.min.js') }}" type="text/javascript"></script>
        <script>
             $('#track-name').autocomplete()
        </script>
    </body>
</html>
