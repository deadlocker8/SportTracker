{% import 'charts/chartMacros.jinja2' as chartMacros with context %}
{% call chartMacros.chart() %}
     const data = [
        {% for entry in chartDataDistancePerMonth %}
            {
                x: {{ entry['monthNames'] }},
                y: {{ entry['values'] }},
                type: 'bar',
                marker: {
                    color: '{{ entry.type.background_color_hex }}'
                },
                text: {{ entry['texts'] }},
                name: '{{ entry.type.name | capitalize }}',
            },
        {% endfor %}
    ];

    const plotlyLayout = {
        paper_bgcolor: 'rgba(0,0,0,0)',
        plot_bgcolor: 'rgba(0,0,0,0)',
        title: {
            text: '{{ gettext('Distance per Month') }}',
            font: {
                color: '#FFFFFF'
            }
        },
        xaxis: {
            type: 'category',
            color: '#FFFFFF',
            automargin: true
        },
        yaxis: {
            title: {
                text: '{{ gettext('Distance in km') }}',
            },
            rangemode: 'tozero',
            tickformat: '.0f',
            showline: true,
            color: '#FFFFFF'
        },
        barmode: 'group',
        legend: {
            font: {
                color: '#FFFFFF'
            }
        }
    }

    const plotlyConfig = {
        responsive: true,
        displayModeBar: false
    };

    Plotly.newPlot('chartContainer', data, plotlyLayout, plotlyConfig);
{% endcall %}