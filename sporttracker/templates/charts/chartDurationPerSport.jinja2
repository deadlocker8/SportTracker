{% import 'charts/chartMacros.jinja2' as chartMacros with context %}
{% call chartMacros.chart() %}
     const data = [
        {
            x: {{ chartDataDurationPerSport['dates'] }},
            y: {{ chartDataDurationPerSport['values'] }},
            type: 'bar',
            marker: {
                color: '{{ chartDataDurationPerSport.type.background_color_hex }}'
            },
            name: '{{ chartDataDurationPerSport.type.name | capitalize }}',
            text: {{ chartDataDurationPerSport['texts'] }}
        },
    ];

    const plotlyLayout = {
        paper_bgcolor: 'rgba(0,0,0,0)',
        plot_bgcolor: 'rgba(0,0,0,0)',
        title: {
            text: '{{ gettext('Duration per Track') }}',
            font: {
                color: '#FFFFFF'
            }
        },
        xaxis: {
            type: 'category',
            color: '#FFFFFF',
            automargin: true
        },
        yaxis: {
            title: '{{ gettext('Duration in s') }}',
            rangemode: 'tozero',
            tickformat: '.0f',
            showline: true,
            color: '#FFFFFF',
            range: [{{ chartDataDurationPerSport.min }}, {{ chartDataDurationPerSport.max }}]
        },
        barmode: 'group',
        legend: {
            font: {
                color: '#FFFFFF'
            }
        }
    }

    const plotlyConfig = {
        responsive: true,
        displayModeBar: false
    };

    Plotly.newPlot('chartContainer', data, plotlyLayout, plotlyConfig);
{% endcall %}