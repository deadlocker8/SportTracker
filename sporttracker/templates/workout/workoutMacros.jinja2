        <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content max-height-90">
                <div class="modal-header d-flex align-items-center justify-content-start">
                    {{ workout_type_icon_small(workout.type, fontSize='fs-3') }}
                    <div class="fs-5 ms-3">
                        {{ workout.start_time | format_date }} - {{ workout.name }}
                    </div>
                </div>
                <div class="modal-body">
                    <div id="heart-rate-modal-progress-spinner-{{ workout.id }}" class="d-flex align-items-center justify-content-center">
                        <span class="spinner-border me-1"></span>
                        <span class="fs-5 ms-3">{{ gettext('Loading heart rate data...') }}</span>
                    </div>

                    <div id="heart-rate-chart-container-{{ workout.id }}" class="w-100"></div>
                    <div class="row">
{#                        {{ annualAchievementStatisticCard(gettext('Min'), workoutType, achievement.all_year_data.min) }}#}
{#                        {{ annualAchievementStatisticCard(gettext('Max'), workoutType, achievement.all_year_data.max) }}#}
{#                        {{ annualAchievementStatisticCard(gettext('Average'), workoutType, achievement.all_year_data.average) }}#}
