        <label for="workout-{{ escapedName }}" class="form-label input-field-margin">{{ field.custom_field.name | e}}</label>
        <div class="d-flex align-items-center">
            <span class="material-symbols-outlined filled me-3">drive_file_rename_outline</span>

            {% if field.custom_field.type.name == 'STRING' %}
                <input type="text"
                       class="form-control"
                       id="workout-{{ escapedName }}"
                       name="{{ field.custom_field.name }}"
                       {% if workout and workout.model_extra[field.custom_field.name] is not none %}value="{{ workout.model_extra[field.custom_field.name] }}"{% endif %}
                        {% if field.custom_field.is_required %} required="required"{% endif %}
                       data-datalist="list-workout-custom-field-{{ escapedName }}"
                >

            {% elif field.custom_field.type.name == 'INTEGER' %}
                <input type="number"
                       step="1"
                       min="0"
                       class="form-control"
                       id="workout-{{ escapedName }}"
                       name="{{ field.custom_field.name }}"
                       {% if workout and workout.model_extra[field.custom_field.name] is not none %}value="{{ workout.model_extra[field.custom_field.name] }}"{% endif %}
                        {% if field.custom_field.is_required %} required="required"{% endif %}
                       data-datalist="list-workout-custom-field-{{ escapedName }}"
                >
            {% elif field.custom_field.type.name == 'FLOAT' %}
                <input type="number"
                       step="0.01"
                       min="0"
                       class="form-control"
                       id="workout-{{ escapedName }}"
                       name="{{ field.custom_field.name }}"
                       {% if workout and workout.model_extra[field.custom_field.name] is not none %}value="{{ workout.model_extra[field.custom_field.name] }}"{% endif %}
                        {% if field.custom_field.is_required %} required="required"{% endif %}
                       data-datalist="list-workout-custom-field-{{ escapedName }}"
                >
            {% endif %}

            <datalist id="list-workout-custom-field-{{ escapedName }}">
                {% for value in field.values %}
                    <option>{{ value | e }}</option>
                {% endfor %}
            </datalist>
        </div>

        <script>
            Autocomplete.init('#workout-{{ escapedName }}', {
                'fullWidth': true,
                'highlightTyped': true,
                'suggestionsThreshold': 1,
            });
        </script>
    </div>
{%- endmacro %}

