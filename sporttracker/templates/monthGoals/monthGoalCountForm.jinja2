<!DOCTYPE html>

<html>
    <head>
        <meta charset="UTF-8">
        <title>SportTracker - {% if goal %}{{ gettext('Edit Count Month Goal') }}{% else %}{{ gettext('New Count Month Goal') }}{% endif %}</title>
        {% import 'macros.jinja2' as macros with context %}
        {{ macros.header() }}
    </head>
    <body class="bg-dark text-light">
        {{ macros.navbar('monthGoals') }}

        <div id="main" class="center-align">
            <section class="py-5 text-center container">
                <div class="row">
                    <div class="col col-12 mx-auto">
                        {% if goal %}
                            <h1>{{ gettext('Edit Count Month Goal') }}</h1>
                            <a href="{{ url_for('monthGoalsCount.delete', goal_id=goal_id) }}" class="btn btn-danger mt-3">{{ gettext('Delete') }}</a>
                        {% else %}
                            <h1>{{ gettext('New Count Month Goal') }}</h1>
                        {% endif %}
                    </div>
                </div>

                <div class="row mt-5 text-start">
                    <div class="col col-11 col-md-9 mx-auto">
                        <form role="form" action="{% if goal %}{{ url_for('monthGoalsCount.editPost', goal_id=goal_id) }}{% else %}{{ url_for('monthGoalsCount.addPost') }}{% endif %}"
                              method="post">
                            <div class="mb-3">
                                <label for="month-goal-type" class="form-label">{{ gettext('Type') }}</label>
                                <select class="form-select" id="month-goal-type" name="type" required="required">
                                    {% for trackType in trackTypes %}
                                        <option value="{{ trackType.name }}" {% if goal and goal.type == trackType.name %}selected{% endif %}>{{ trackType.get_localized_name() }}</option>
                                    {% endfor %}
                                </select>
                            </div>

                            <div class="mb-3">
                                <div class="row">
                                    <div class="col col-6">
                                        <label for="month-goal-year" class="form-label">{{ gettext('Year') }}</label>
                                        <input type="number" step="1" min="2000" class="form-control"
                                               id="month-goal-year" name="year" placeholder="YYYY"
                                               required="required" {% if goal %}value="{{ goal.year }}"{% endif %}>
                                    </div>
                                    <div class="col col-6">
                                        <label for="month-goal-month" class="form-label">{{ gettext('Month') }}</label>
                                        <input type="number" min="1" max="12" class="form-control" id="month-goal-month"
                                               name="month" placeholder="MM"
                                               required="required" {% if goal %}value="{{ goal.month }}"{% endif %}>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-5">
                                <div class="row">
                                    <div class="col col-6">
                                        <label for="month-goal-minimum" class="form-label">{{ gettext('Minimum number of tracks') }}</label>
                                        <input type="number" step="1" min="0" class="form-control"
                                               id="month-goal-minimum" name="count_minimum" required="required"
                                               {% if goal %}value="{{ goal.count_minimum }}"{% endif %}>
                                    </div>
                                    <div class="col col-6">
                                        <label for="month-goal-perfect" class="form-label">{{ gettext('Perfect number of tracks') }}</label>
                                        <input type="number" step="1" min="0" class="form-control"
                                               id="month-goal-perfect" name="count_perfect" required="required"
                                               {% if goal %}value="{{ goal.count_perfect }}"{% endif %}>
                                    </div>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary">{{ gettext('Save') }}</button>
                        </form>
                    </div>
                </div>
            </section>
        </div>

        {{ macros.scripts() }}
    </body>
</html>
