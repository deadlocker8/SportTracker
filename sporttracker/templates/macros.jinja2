{% macro navbar(activeLink) -%}
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center justify-content-center" href="/">
                <img alt="SportTracker logo" src="{{ url_for('static', filename="images/SportTracker.png") }}"
                     width="35" height="35" class="d-inline-block align-text-top">
                <span class="ms-2">SportTracker - {{ versionName }}</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse text-center" id="navbarSupportedContent">
                {% if current_user.is_authenticated %}
                    {% if current_user.isAdmin %}
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center {% if activeLink == 'users' %}active {% endif %}"
                                   href="{{ url_for('users.listUsers') }}"><span class="navbar-icon"><span
                                        class="material-icons fs-5">groups</span></span>&nbsp;{{ gettext('Users') }}
                                </a>
                            </li>
                        </ul>
                        <div class="d-flex align-items-center justify-content-between mt-3 mt-sm-0">
                            <div class="text-white mx-md-3 me-3 my-2 my-md-0">
                                <div class="d-flex align-items-center">
                                    <span class="navbar-icon"><span class="material-icons fs-4">person</span></span>&nbsp;{{ current_user.username|capitalize }}
                                </div>
                            </div>
                            <a href="{{ url_for('authentication.logout') }}" class="btn btn-danger">Logout</a>
                        </div>
                    {% else %}
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center {% if activeLink == 'tracks' %}active {% endif %}"
                                   href="/"><span class="navbar-icon"><i
                                        class="fa-solid fa-route fa-fw fs-6"></i></span>&nbsp;{{ gettext('Tracks') }}
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center {% if activeLink == 'monthGoals' %}active {% endif %}"
                                   href="{{ url_for('monthGoals.listMonthGoals') }}"><span class="navbar-icon"><span
                                        class="material-icons fs-5">flag</span></span>&nbsp;{{ gettext('Goals') }}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center {% if activeLink == 'charts' %}active {% endif %}"
                                   href="{{ url_for('charts.chartChooser') }}"><span class="navbar-icon"><span
                                        class="material-icons fs-5">leaderboard</span></span>&nbsp;{{ gettext('Charts') }}
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center {% if activeLink == 'achievements' %}active {% endif %}"
                                   href="{{ url_for('achievements.showAchievements') }}"><span class="navbar-icon"><span
                                        class="material-icons fs-5">emoji_events</span></span>&nbsp;{{ gettext('Achievements') }}
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center {% if activeLink == 'map' %}active {% endif %}"
                                   href="{{ url_for('maps.showAllTracksOnMap') }}"><span class="navbar-icon"><span
                                        class="material-icons fs-5">map</span></span>&nbsp;{{ gettext('Map') }}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center {% if activeLink == 'maintenanceEvents' %}active {% endif %}"
                                   href="{{ url_for('maintenanceEvents.listMaintenanceEvents') }}"><span
                                        class="navbar-icon"><i
                                        class="fa-solid fa-wrench fa-fw fs-6"></i></span>&nbsp;{{ gettext('Maintenance') }}
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center {% if activeLink == 'plannedTours' %}active {% endif %}"
                                   href="{{ url_for('plannedTours.listPlannedTours') }}"><span class="navbar-icon"><i
                                        class="fa-solid fa-lightbulb fa-fw fs-6"></i></span>&nbsp;{{ gettext('Planned Tours') }}
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center {% if activeLink == 'settings' %}active {% endif %}"
                                   href="{{ url_for('settings.settingsShow') }}"><span class="navbar-icon"><span
                                        class="material-icons fs-5">settings</span></span>&nbsp;{{ gettext('Settings') }}
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center {% if activeLink == 'about' %}active {% endif %}"
                                   href="{{ url_for('general.about') }}"><span class="navbar-icon"><span
                                        class="material-icons fs-5">info_outline</span></span>&nbsp;{{ gettext('About') }}
                                </a>
                            </li>
                        </ul>

                        <form class="d-flex" role="search" action="{{ url_for('search.performSearch') }}"
                              method="GET">
                            <input class="form-control me-2" type="search" placeholder="{{ gettext('Search') }}"
                                   name="searchText" value="{% if searchText %}{{ searchText }}{% endif %}">
                        </form>

                        <div class="d-flex align-items-center justify-content-between mt-3 mt-sm-0">
                            <div class="text-white mx-md-3 me-3 my-2 my-md-0">
                                <div class="d-flex align-items-center">
                                    <span class="navbar-icon"><span class="material-icons fs-4">person</span></span>&nbsp;{{ current_user.username|capitalize }}
                                </div>
                            </div>
                            <a href="{{ url_for('authentication.logout') }}" class="btn btn-danger">Logout</a>
                        </div>
                    {% endif %}
                {% endif %}
            </div>
        </div>
    </nav>
{%- endmacro %}

{% macro customFieldInput(field) -%}
    <div class="mb-3">
        <label for="track-{{ field.name }}" class="form-label">{{ field.name }}</label>
        {% if field.type.name == 'STRING' %}
            <input type="text"
                   class="form-control"
                   id="track-{{ field.name }}"
                   name="{{ field.name }}"
                   {% if track and track.model_extra[field.name] is not none %}value="{{ track.model_extra[field.name] }}"{% endif %}
                    {% if field.is_required %} required="required"{% endif %}
            >
        {% elif field.type.name == 'INTEGER' %}
            <input type="number"
                   step="1"
                   min="0"
                   class="form-control"
                   id="track-{{ field.name }}"
                   name="{{ field.name }}"
                   {% if track and track.model_extra[field.name] is not none %}value="{{ track.model_extra[field.name] }}"{% endif %}
                    {% if field.is_required %} required="required"{% endif %}
            >
        {% elif field.type.name == 'FLOAT' %}
            <input type="number"
                   step="0.01"
                   min="0"
                   class="form-control"
                   id="track-{{ field.name }}"
                   name="{{ field.name }}"
                   {% if track and track.model_extra[field.name] is not none %}value="{{ track.model_extra[field.name] }}"{% endif %}
                    {% if field.is_required %} required="required"{% endif %}
            >
        {% endif %}
    </div>
{%- endmacro %}

{% macro track_type_quick_filter(redirectUrl) -%}
    <div class="d-flex flex-row align-items-center justify-content-center">
        {% for trackType, isActive in quickFilterState.get_states().items() %}
            <a href="{{ url_for('quickFilter.toggleQuickFilter', trackType=trackType.name, redirectUrl=redirectUrl) }}" class="quick-filter lh-1 {% if not loop.last %}me-3{% endif %}">
                {{ track_type_quick_filter_button(trackType, isActive) }}
            </a>
        {% endfor %}
    </div>
{%- endmacro %}

{% macro track_type_quick_filter_button(trackType, isActive) -%}
    {% if isActive %}
        {% set backgroundColor=trackType.background_color %}
    {% else %}
        {% set backgroundColor='bg-secondary' %}
    {% endif %}

    {% if trackType.is_font_awesome_icon %}
        <i class="fa-solid {{ trackType.icon }} fa-fw rounded-circle fs-4 p-2 text-dark {{ backgroundColor }}"></i>
    {% else %}
        <span class="material-icons rounded-circle fs-4 p-2 text-dark {{ backgroundColor }}">{{ trackType.icon }}</span>
    {% endif %}
{%- endmacro %}

{% macro deleteModal(title, text, idSuffix='0') -%}
    <div class="modal fade" tabindex="-1" id="delete-modal-{{ idSuffix }}">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content bg-dark">
                <div class="modal-header">
                    <h5 class="modal-title">{{ title }}</h5>
                </div>
                <div class="modal-body">
                    <p>{{ text }}</p>
                </div>
                <div class="modal-footer">
                    {{ caller() }}
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ gettext('Cancel') }}</button>
                </div>
            </div>
        </div>
    </div>
{%- endmacro %}

{% macro headline(headline, addUrl='', size='fs-1') -%}
    <div class="{{ size }} mb-2 d-flex align-items-center justify-content-center">
        <span class="headline-icon d-flex align-items-center justify-content-center">
            {{ caller() }}
        </span>
        <span class="ms-1 me-3">{{ headline }}</span>
        {% if addUrl %}
            <a href="{{ addUrl }}" class="link-light text-decoration-none d-flex-inline align-items-center">
                <span class="rounded-circle bg-primary p-1 fs-3 material-icons">add</span>
            </a>
        {% endif %}
    </div>
{%- endmacro %}