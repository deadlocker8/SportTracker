{% import 'chart/chartMacros.jinja2' as chartMacros with context %}
{% call chartMacros.chart(gettext('Average Speed')) %}
     const data = [
        {% for entry in chartDataAverageSpeed %}
            {
                x: {{ entry['dates'] }},
                y: {{ entry['values'] }},
                type: 'scatter',
                fill: 'tozeroy',
                marker: {
                    color: '{{ entry.type.background_color_hex }}'
                },
                text: {{ entry['values'] }},
                name: '{{ entry.type.name | capitalize }}'
            },
        {% endfor %}
    ];

    const plotlyLayout = {
        paper_bgcolor: 'rgba(0,0,0,0)',
        plot_bgcolor: 'rgba(0,0,0,0)',
        xaxis: {
            type: 'date',
            color: '#FFFFFF',
            automargin: true,
            showgrid: false,
        },
        yaxis: {
            title: {
                text: '{{ gettext('Speed in km/h') }}',
            },
            rangemode: 'tozero',
            tickformat: '.0f',
            showline: true,
            color: '#FFFFFF'
        },
        barmode: 'group',
        legend: {
            font: {
                color: '#FFFFFF'
            }
        }
    }

    const plotlyConfig = {
        responsive: true,
        displayModeBar: false
    };

    Plotly.newPlot('chartContainer', data, plotlyLayout, plotlyConfig);
{% endcall %}