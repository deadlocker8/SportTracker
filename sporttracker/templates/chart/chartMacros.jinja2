{% macro chart(chartTitle='') -%}
    <!DOCTYPE html>

    <html>
        <head>
            <meta charset="UTF-8">
            <title>SportTracker - {{ gettext('Charts') }}</title>
            {% import 'macros.jinja2' as macros with context %}
            {{ macros.header() }}
        </head>
        <body class="bg-dark text-light">
            {{ macros.navbar('charts') }}

            {% import 'monthGoals/monthGoalsMacros.jinja2' as monthGoalsMacros with context %}

            <div id="main" class="center-align">
                <section class="py-5 text-center container">
                    <div class="row">
                        <div class="col col-12 mx-auto">
                            {% call macros.headline(gettext('Charts')) %}
                            <span class="material-symbols-outlined filled fs-1">leaderboard</span>
                        {% endcall %}
                        </div>
                    </div>

                    {% if chartTitle %}
                        <h5 class="mt-3">{{ chartTitle }}</h5>
                    {% endif %}
                    <div id="chartContainer"></div>
                </section>
            </div>

            {{ macros.scripts() }}
            <script>
                 {{ caller() }}
            </script>
        </body>
    </html>
{%- endmacro %}