<!DOCTYPE html>

{% macro test(icon, iconColor, title) -%}
    <div class="d-flex flex-column align-items-start mb-4">
        <div class="d-flex align-items-start">
            <div class="material-icons {{ iconColor }} fs-3 me-2">{{ icon }}</div>
            <div>
                <div class="fs-5">{{ gettext(title) }}</div>
                <div class="fs-4">
                    {{ caller() }}
                </div>
            </div>
        </div>
    </div>
{%- endmacro %}

<html>
    <head>
        <meta charset="UTF-8">
        <title>SportTracker - {{ gettext('Map') }}</title>
        {% import 'macros.jinja2' as macros with context %}
        {{ macros.header() }}
        <link type="text/css" rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"/>
        <link rel="stylesheet" href="https://unpkg.com/@raruto/leaflet-elevation/dist/leaflet-elevation.css"/>
        <link type="text/css" rel="stylesheet" href="{{ url_for('static', filename="css/leaflet-theme.css") }}"/>
    </head>
    <body class="bg-dark text-light">
        {{ macros.navbar('map') }}
        {% import 'tracks/trackMacros.jinja2' as trackMacros with context %}

        <div class="d-flex align-items-center text-truncate justify-content-center my-3">

            {{ trackMacros.track_type_icon_small(plannedTour.type, fontSize='fs-3') }}
            <div class="fs-5 text-truncate planned-tour-name ps-3 pe-2">
                {{ plannedTour.name }}
            </div>
        </div>

        <div class="row mx-5">
            <div class="col col-10 p-0 pe-4">
                <div id="map" class="leaflet-map text-dark map-smaller"></div>
            </div>
            <div class="col col-2 p-0">
                <div class="card bg-body-secondary" data-bs-theme="dark">
                    <div class="card-header">
                        <div class="fs-5 text-truncate planned-tour-name ">
                            {{ gettext('Planned Tour') }}
                        </div>
                    </div>

                    <div class="card-body ps-4 pt-4">
                        {% call test('route', plannedTour.type.text_color, 'Distance') %}
                            {% if plannedTour.gpxMetaInfo is not none %}
                                {{ (plannedTour.gpxMetaInfo.distance / 1000) | format_decimal(2) }}
                            {% else %}
                                -
                            {% endif %} km
                        {% endcall %}

                        {% call test('arrow_forward', plannedTour.type.text_color, 'Arrival') %}
                            {{ plannedTour.arrivalMethod.get_localized_name() }}
                        {% endcall %}

                        {% call test('arrow_back', plannedTour.type.text_color, 'Departure') %}
                            {{ plannedTour.departureMethod.get_localized_name() }}
                        {% endcall %}

                        {% call test('directions', plannedTour.type.text_color, 'Direction') %}
                            {{ plannedTour.direction.get_localized_name() }}
                        {% endcall %}

                        {% call test('vertical_align_bottom', plannedTour.type.text_color, 'Min Height') %}
                            {% if plannedTour.gpxMetaInfo is not none %}
                                {{ (plannedTour.gpxMetaInfo.elevationExtremes.minimum) }}
                            {% else %}
                                -
                            {% endif %} m
                        {% endcall %}

                        {% call test('vertical_align_top', plannedTour.type.text_color, 'Max Height') %}
                            {% if plannedTour.gpxMetaInfo is not none %}
                                {{ (plannedTour.gpxMetaInfo.elevationExtremes.maximum) }}
                            {% else %}
                                -
                            {% endif %} m
                        {% endcall %}

                        {% call test('arrow_upward', plannedTour.type.text_color, 'Uphill') %}
                            {% if plannedTour.gpxMetaInfo is not none %}
                                {{ (plannedTour.gpxMetaInfo.uphillDownhill.uphill) }}
                            {% else %}
                                -
                            {% endif %} m
                        {% endcall %}
                        {% call test('arrow_downward', plannedTour.type.text_color, 'Downhill') %}
                            {% if plannedTour.gpxMetaInfo is not none %}
                                {{ (plannedTour.gpxMetaInfo.uphillDownhill.downhill) }}
                            {% else %}
                                -
                            {% endif %} m
                        {% endcall %}
                    </div>

                    <div class="card-footer text-body-secondary d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            {{ gettext('last edited') }}: {{ plannedTour.lastEditDate | format_date() }}
                        </div>
                        <div>
                            {{ gettext('by') }} {{ plannedTour.ownerName }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script>
            gpxUrl = '{{ gpxUrl }}';
        </script>

        {% import 'maps/mapMacros.jinja2' as mapMacros with context %}
        {{ mapMacros.mapLocale() }}

        {{ macros.scripts() }}
        <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
        <script src="https://unpkg.com/leaflet-ui@0.6.0/dist/leaflet-ui.js"></script>
        <script src="https://unpkg.com/@raruto/leaflet-elevation/dist/leaflet-elevation.js"></script>
        <script defer src="{{ url_for('static', filename='js/mapCommon.js') }}" type="text/javascript"></script>
        <script defer src="{{ url_for('static', filename='js/mapPlannedTour.js') }}" type="text/javascript"></script>
    </body>
</html>
