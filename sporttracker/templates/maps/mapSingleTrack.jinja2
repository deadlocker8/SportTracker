<!DOCTYPE html>

<html>
    <head>
        <meta charset="UTF-8">
        {% if sport.shareCode and sport.ownerName != current_user.username %}
            <title>SportTracker - {{ gettext('Shared Track') }}</title>
            <meta name="description" content="{{ sport.ownerName|capitalize }} is sharing a track with you!">
        {% else %}
            <title>SportTracker - {{ gettext('Track') }}</title>
        {% endif %}
        {% import 'macros.jinja2' as macros with context %}
        {{ macros.header() }}
        <link type="text/css" rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"/>
        <link rel="stylesheet" href="https://unpkg.com/@raruto/leaflet-elevation/dist/leaflet-elevation.css"/>
        <link type="text/css" rel="stylesheet" href="{{ url_for('static', filename="css/leaflet-theme.css") }}"/>
    </head>
    <body class="bg-dark text-light">
        {{ macros.navbar('map') }}

        {% import 'sports/sportMacros.jinja2' as sportMacros with context %}
        {% import 'maps/mapMacros.jinja2' as mapMacros with context %}

        <div class="d-flex flex-row align-items-center justify-content-center my-3 px-3">
            <div class="d-flex align-items-center text-truncate justify-content-center">
                {{ sportMacros.sport_type_icon_small(sport.type, fontSize='fs-3') }}
                <div class="fs-5 text-truncate planned-tour-name ps-3 pe-2">
                    {{ sport.name }}
                </div>
            </div>

            {% if editUrl and current_user.isTileHuntingActivated %}
                {{ mapMacros.tileHuntingMapSettings(tileHuntingIsShowTilesActive, tileHuntingIsGridActive, sport.id) }}
            {% endif %}
        </div>


        <!-- small displays -->
        <div class="card bg-body-secondary mx-3 mb-3 d-xl-none" data-bs-theme="dark">
            {{ mapMacros.gpxDownloadButton(gettext('Track'), gpxUrl, 'fa-route', editUrl=editUrl) }}

            <div class="card-body ps-4 pt-4 pb-0">
                <div class="row row-cols-4 gy-3 pb-3 overflow-x-auto">
                    {% call mapMacros.meta_info_item_small('event', sport.type.text_color, gettext('Date')) %}
                        {{ sport.startTime | format_date }}
                    {% endcall %}
                    {% call mapMacros.meta_info_item_small('route', sport.type.text_color, gettext('Distance')) %}
                        {{ (sport.distance / 1000) | format_decimal(2) }} km
                    {% endcall %}
                    {% call mapMacros.meta_info_item_small('timer', sport.type.text_color, gettext('Duration'), 'material-symbols-outlined') %}
                        {{ sport.duration | format_duration }} h
                    {% endcall %}
                    {% call mapMacros.meta_info_item_small('speed', sport.type.text_color, gettext('Speed'), 'material-symbols-outlined') %}
                        {% if sport.type.render_speed_in_kph %}
                            {% if sport.duration is none %}
                                -
                            {% else %}
                                {{ (sport.distance / sport.duration * 3.6) | round(1) | format_decimal }} km/h
                            {% endif %}
                        {% else %}
                            {% if sport.duration is none %}
                                -
                            {% else %}
                                {{ sport | format_pace }} min
                            {% endif %}
                        {% endif %}
                    {% endcall %}
                </div>
            </div>

            <div class="card-footer text-body-secondary d-flex align-items-center justify-content-end">
                <div class="d-flex align-items-center">
                    <div class="material-symbols-outlined filled fs-4 me-1">person</div>
                    <div>{{ sport.ownerName }}</div>
                </div>
            </div>
        </div>

        <div class="row mx-3 mx-xl-5">
            <div class="col col-12 col-xl-10 p-0">
                <div id="map" class="leaflet-map text-dark map-smaller"></div>
            </div>

            <!-- large displays -->
            <div class="col col-2 p-0 ps-4 d-none d-xl-block">
                <div class="card bg-body-secondary" data-bs-theme="dark">
                    {{ mapMacros.gpxDownloadButton(gettext('Track'), gpxUrl, 'fa-route', 'flex-column flex-xxl-row', editUrl=editUrl) }}

                    <div class="card-body ps-4 pt-4">
                        {% call mapMacros.meta_info_item('event', sport.type.text_color, gettext('Date')) %}
                            {{ sport.startTime | format_date }}
                        {% endcall %}

                        {% call mapMacros.meta_info_item('route', sport.type.text_color, gettext('Distance')) %}
                            {{ (sport.distance / 1000) | format_decimal(2) }} km
                        {% endcall %}

                        {% call mapMacros.meta_info_item('timer', sport.type.text_color, gettext('Duration'), 'material-symbols-outlined') %}
                            {{ sport.duration | format_duration }} h
                        {% endcall %}

                        {% call mapMacros.meta_info_item('speed', sport.type.text_color, gettext('Avg. Speed'), 'material-symbols-outlined') %}
                            {% if sport.type.render_speed_in_kph %}
                                {% if sport.duration is none %}
                                    -
                                {% else %}
                                    {{ (sport.distance / sport.duration * 3.6) | round(1) | format_decimal }} km/h
                                {% endif %}
                            {% else %}
                                {% if sport.duration is none %}
                                    -
                                {% else %}
                                    {{ sport | format_pace }} min
                                {% endif %}
                            {% endif %}
                        {% endcall %}

                        {% call mapMacros.meta_info_item('favorite_border', sport.type.text_color, gettext('Avg. Heart Rate'), 'material-symbols-outlined') %}
                            {% if sport.average_heart_rate is not none %}
                                {{ sport.average_heart_rate }} bpm
                            {% else %}
                                -
                            {% endif %}
                        {% endcall %}

                        {% call mapMacros.meta_info_item('expand', sport.type.text_color, gettext('Elevation Sum')) %}
                            {% if sport.elevation_sum is not none %}
                                {{ sport.elevation_sum }} m
                            {% else %}
                                -
                            {% endif %}
                        {% endcall %}

                        {% call mapMacros.meta_info_item('vertical_align_bottom', sport.type.text_color, gettext('Min Height')) %}
                            {% if sport.gpxMetadata is not none %}
                                {{ (sport.gpxMetadata.elevation_minimum) }} m
                            {% else %}
                                -
                            {% endif %}
                        {% endcall %}

                        {% call mapMacros.meta_info_item('vertical_align_top', sport.type.text_color, gettext('Max Height')) %}
                            {% if sport.gpxMetadata is not none %}
                                {{ (sport.gpxMetadata.elevation_maximum) }} m
                            {% else %}
                                -
                            {% endif %}
                        {% endcall %}
                    </div>

                    <div class="card-footer text-body-secondary d-flex align-items-center justify-content-end">
                        <div class="d-flex align-items-center">
                            <div class="material-symbols-outlined filled fs-4 me-1">person</div>
                            <div>{{ sport.ownerName }}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script>
            gpxUrl = '{{ gpxUrl }}';
            tileRenderUrl = '{{ tileRenderUrl }}';
        </script>

        {% import 'maps/mapMacros.jinja2' as mapMacros with context %}
        {{ mapMacros.mapLocale() }}

        {{ macros.scripts() }}
        <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
        <script src="https://unpkg.com/leaflet-ui@0.6.0/dist/leaflet-ui.js"></script>
        <script src="https://unpkg.com/@raruto/leaflet-elevation/dist/leaflet-elevation.js"></script>
        <script defer src="{{ url_for('static', filename='js/mapCommon.js') }}" type="text/javascript"></script>
        <script defer src="{{ url_for('static', filename='js/mapSingleTrack.js') }}" type="text/javascript"></script>
    </body>
</html>
