<!DOCTYPE html>
<html>
    <head>
        <title>SportTracker - Login</title>
        {% import 'macros.jinja2' as macros %}
        {{ macros.header() }}

        <link type="text/css" rel="stylesheet" href="{{ url_for('static', filename="css/login.css") }}"/>
    </head>
    <body class="bg-light">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <img alt="SportTracker logo" src="{{ url_for('static', filename="images/SportTracker.png") }}" width="35" height="35" class="d-inline-block align-top">
                    SportTracker - {{ versionName }}
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse text-center" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    </ul>
                </div>
            </div>
        </nav>
        <main>
            <div class="form-signin align-middle card">
                <form role="form" action="{{ url_for('authentication.login') }}" method="post">
                    <img class="mb-4" src="{{ url_for('static', filename="images/SportTracker.png") }}" alt="" width="80" height="80">
                    <h1 class="h3 mb-3 fw-normal">SportTracker</h1>

                    <label for="username" class="visually-hidden">Username</label>
                    <input type="text" id="username" name="username" class="form-control" placeholder="Username"
                           required="" autofocus="">

                    <label for="password" class="visually-hidden">Password</label>
                    <input type="password" id="password" name="password" class="form-control mb-4"
                           placeholder="Password" required="">

                    <button class="w-100 my-3 btn btn-lg btn-primary" type="submit">Login</button>

                    {% if message %}
                        <div class="col-12 text-center text-danger">
                            <i class="material-icons align-middle">warning</i>
                            <span id="loginMessage" class="align-middle">{{ message }}</span>
                        </div>
                    {% endif %}
                </form>
            </div>
        </main>

        {{ macros.scripts() }}
    </body>
</html>
