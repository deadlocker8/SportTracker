{% macro render_month_goal_progress_bar(goalSummary) -%}
    <div class="progress" role="progressbar">
        <div class="progress-bar {{ goalSummary.color }}" style="width: {{ goalSummary.percentage }}%"></div>
    </div>
{%- endmacro %}

{% macro render_month_goal_distance(goalSummary) -%}
    <div class="fs-5">{{ goalSummary.actual_distance | format_decimal }}/{{ goalSummary.goal_distance_perfect | format_decimal }} km</div>
{%- endmacro %}

{% macro render_month_goal_count(goalSummary) -%}
    <div class="fs-5">{{ goalSummary.actual_count }}/{{ goalSummary.goal_count_perfect }}</div>
{%- endmacro %}

{% macro render_month_goal_distance_summary_card(goalSummary) -%}
    <div class="row py-3">
        <div class="col col-xxl-8 col-lg-10 col-s-12 mx-auto px-xxl-5 px-xl-4 px-lg-3">
            <a href="{{ url_for('monthGoalsDistance.edit', goal_id=goalSummary.id) }}" class="text-decoration-none">
                <div class="card">
                    <div class="row g-0 d-flex align-items-center p-2">
                        <div class="col col-2">
                             <span class="material-icons fs-3 p-2 text-secondary me-3">{{ goalSummary.icon }}</span>
                             <span class="material-icons rounded-circle fs-3 p-2 text-dark {{ goalSummary.type.background_color }}">{{ goalSummary.type.icon }}</span>
                        </div>
                        <div class="col col-3 text-start fs-4">
                            {{ goalSummary.name }}
                        </div>
                        <div class="col col-4">
                            {{ render_month_goal_progress_bar(goalSummary) }}
                        </div>
                        <div class="col col-3">
                            {{ render_month_goal_distance(goalSummary) }}
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
{%- endmacro %}


