<!DOCTYPE html>

<html>
    <head>
        <meta charset="UTF-8">
        <title>SportTracker</title>
        {% import 'macros.jinja2' as macros %}
        {{ macros.header() }}
    </head>
    <body class="bg-dark">
        <a href="{{ url_for('authentication.logout') }}" class="btn btn-primary position-fixed">Logout</a>

        <div id="main" class="center-align">
            <section class="py-5 text-center container">
                <div class="row py-lg-5">
                    <div class="col-lg-6 col-md-8 mx-auto">
                        <h1 class="text-light">SportTracker - {{ versionName }}</h1>
                    </div>
                </div>
            </section>
        </div>

        {{ macros.scripts() }}
    </body>
</html>
