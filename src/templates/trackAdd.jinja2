<!DOCTYPE html>

<html>
    <head>
        <meta charset="UTF-8">
        <title>SportTracker - Add Track</title>
        {% import 'macros.jinja2' as macros with context %}
        {{ macros.header() }}
    </head>
    <body class="bg-dark text-light">
        {{ macros.navbar('tracks') }}

        <div id="main" class="center-align">
            <section class="py-5 text-center container">
                <div class="row">
                    <div class="col-12 mx-auto">
                        <h1>New Track</h1>
                    </div>
                </div>

                <div class="row mt-5 text-start">
                    <div class="col-9 mx-auto">
                        <form role="form" action="{{ url_for('tracks.addPost') }}" method="post">
                            <div class="mb-3">
                                <label for="track-name" class="form-label">Name</label>
                                <input type="text" class="form-control" id="track-name" name="name"
                                       required="required">
                            </div>

                            <div class="mb-3">
                                <div class="row">
                                    <div class="col-6">
                                        <label for="track-date" class="form-label">Date</label>
                                        <input type="date" class="form-control" id="track-date" name="date"
                                               required="required">
                                    </div>
                                    <div class="col-6">
                                        <label for="track-time" class="form-label">Start Time</label>
                                        <input type="time" class="form-control" id="track-time" name="time"
                                               required="required">
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="track-distance" class="form-label">Distance (in km)</label>
                                <input type="number" step="0.01" min="0" class="form-control" id="track-distance"
                                       name="distance" required="required">
                            </div>

                            <div class="mb-5">
                                <div class="row">
                                    <div class="col-2">
                                        <label for="track-duration-hours" class="form-label">Duration</label>
                                        <input type="number" step="1" min="0" class="form-control"
                                               id="track-duration-hours" name="durationHours" placeholder="Hours"
                                               required="required">
                                    </div>
                                    <div class="col-2">
                                        <label for="track-duration-minutes" class="form-label">&nbsp;</label>
                                        <input type="number" step="1" min="0" max="59" class="form-control"
                                               id="track-duration-minutes" name="durationMinutes"
                                               placeholder="Minutes" required="required">
                                    </div>
                                    <div class="col-2">
                                        <label for="track-duration-seconds" class="form-label">&nbsp;</label>
                                        <input type="number" step="1" min="0" max="59" class="form-control"
                                               id="track-duration-seconds" name="durationSeconds"
                                               placeholder="Seconds" required="required">
                                    </div>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary">Save</button>
                        </form>
                    </div>
                </div>
            </section>
        </div>

        {{ macros.scripts() }}
    </body>
</html>
