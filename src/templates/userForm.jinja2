<!DOCTYPE html>

<html>
    <head>
        <meta charset="UTF-8">
        <title>SportTracker - {% if user %}Add{% else %}Edit{% endif %} User</title>
        {% import 'macros.jinja2' as macros with context %}
        {{ macros.header() }}
    </head>
    <body class="bg-dark text-light">
        {{ macros.navbar('users') }}

        <div id="main" class="center-align">
            <section class="py-5 text-center container">
                <div class="row">
                    <div class="col-12 mx-auto">
                        {% if user %}
                            <h1>Edit User</h1>
                            <a href="{{ url_for('users.delete', user_id=user_id) }}"
                               class="btn btn-danger mt-3">Delete</a>
                        {% else %}
                            <h1>New User</h1>
                        {% endif %}
                    </div>
                </div>

                <div class="row mt-5 text-start">
                    <div class="col-9 mx-auto">
                        {% if errorMessage %}
                            <div class="alert alert-danger" role="alert">
                                {{ errorMessage }}
                            </div>
                        {% endif %}

                        <form role="form" action="{% if user %}{{ url_for('users.editPost', user_id=user_id) }}{% else %}{{ url_for('users.addPost') }}{% endif %}"
                              method="post">

                            <div class="mb-3">
                                <label for="user-name" class="form-label">Name</label>
                                <input type="text" class="form-control"
                                       id="user-name" name="username"
                                       required="required" {% if user %}value="{{ user.username }}"{% endif %}>
                            </div>
                            <div class="mb-5">
                                <label for="user-password" class="form-label">Password</label>
                                <input type="password" class="form-control" id="user-password"
                                       name="password" required="required">
                            </div>

                            {% if user %}
                                <input type="hidden" name="old_username" value="{{ user.username }}">
                            {% endif %}

                            <button type="submit" class="btn btn-primary">Save</button>
                        </form>
                    </div>
                </div>
            </section>
        </div>

        {{ macros.scripts() }}
    </body>
</html>
