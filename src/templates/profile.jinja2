<!DOCTYPE html>

<html>
    <head>
        <meta charset="UTF-8">
        <title>SportTracker - {{ gettext('Profile') }}</title>
        {% import 'macros.jinja2' as macros with context %}
        {{ macros.header() }}
    </head>
    <body class="bg-dark text-light">
        {{ macros.navbar('profile') }}

        <div id="main" class="center-align">
            <section class="py-5 text-center container">
                <div class="row">
                    <div class="col-12 mx-auto">
                        <h1>{{ gettext('Profile') }}</h1>
                    </div>
                </div>

                <div class="row mt-5 text-start">
                    <div class="col-9 mx-auto">
                        {% if errorMessage %}
                            <div class="alert alert-danger" role="alert">
                                {{ errorMessage }}
                            </div>
                        {% endif %}

                        <form role="form" action="{{ url_for('users.editSelfPost') }}" method="post">
                            <div class="mb-4">
                                <label for="user-password" class="form-label">{{ gettext('Password') }}</label>
                                <input type="password" class="form-control" id="user-password"
                                       name="password" required="required">
                            </div>

                            <button type="submit" class="btn btn-primary">{{ gettext('Save') }}</button>
                        </form>

                        <form role="form" action="{{ url_for('users.editSelfLanguagePost') }}" method="post" class="mt-5">
                           <div class="mb-4">
                                <label for="user-language" class="form-label">{{ gettext('Language') }}</label>
                                <select class="form-select" id="user-language" name="language" required="required">
                                    <option value="ENGLISH" {% if userLanguage == 'ENGLISH'%}selected{% endif %}>English</option>
                                    <option value="GERMAN" {% if userLanguage == 'GERMAN'%}selected{% endif %}>Deutsch</option>
                                </select>
                            </div>

                            <button type="submit" class="btn btn-primary">{{ gettext('Save') }}</button>
                        </form>
                    </div>
                </div>
            </section>
        </div>

        {{ macros.scripts() }}
    </body>
</html>
