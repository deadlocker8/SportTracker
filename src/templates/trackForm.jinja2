<!DOCTYPE html>

<html>
    <head>
        <meta charset="UTF-8">
        <title>SportTracker - {% if track %}Add{% else %}Edit{% endif %} Track</title>
        {% import 'macros.jinja2' as macros with context %}
        {{ macros.header() }}
    </head>
    <body class="bg-dark text-light">
        {{ macros.navbar('tracks') }}

        <div id="main" class="center-align">
            <section class="py-5 text-center container">
                <div class="row">
                    <div class="col-12 mx-auto">
                        {% if track %}
                            <h1>Edit Track</h1>
                            <a href="{{ url_for('tracks.delete', track_id=track_id) }}" class="btn btn-danger mt-3">Delete</a>
                        {% else %}
                            <h1>New Track</h1>
                        {% endif %}
                    </div>
                </div>

                <div class="row mt-5 text-start">
                    <div class="col-9 mx-auto">
                        <form role="form" action="{% if track %}{{ url_for('tracks.editPost', track_id=track_id) }}{% else %}{{ url_for('tracks.addPost') }}{% endif %}"
                              method="post">
                            <div class="mb-3">
                                <label for="track-type" class="form-label">Type</label>
                                <select class="form-select" id="track-type" name="type" required="required">
                                    <option value="BICYCLE"
                                            {% if track and track.type == 'BICYCLE' %}selected{% endif %}>Biking
                                    </option>
                                    <option value="RUNNING"
                                            {% if track and track.type == 'RUNNING' %}selected{% endif %}>Running
                                    </option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="track-name" class="form-label">Name</label>
                                <input type="text" class="form-control" id="track-name" name="name"
                                       required="required" {% if track %}value="{{ track.name }}"{% endif %}>
                            </div>

                            <div class="mb-3">
                                <div class="row">
                                    <div class="col-6">
                                        <label for="track-date" class="form-label">Date</label>
                                        <input type="date" class="form-control" id="track-date" name="date"
                                               required="required" {% if track %}value="{{ track.date }}"{% endif %}>
                                    </div>
                                    <div class="col-6">
                                        <label for="track-time" class="form-label">Start Time</label>
                                        <input type="time" class="form-control" id="track-time" name="time"
                                               required="required" {% if track %}value="{{ track.time }}"{% endif %}>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="track-distance" class="form-label">Distance (in km)</label>
                                <input type="number" step="0.01" min="0" class="form-control" id="track-distance"
                                       name="distance" required="required"
                                       {% if track %}value="{{ track.distance }}"{% endif %}>
                            </div>

                            <div class="mb-3">
                                <div class="row">
                                    <div class="col-2">
                                        <label for="track-duration-hours" class="form-label">Duration</label>
                                        <input type="number" step="1" min="0" class="form-control"
                                               id="track-duration-hours" name="durationHours" placeholder="Hours"
                                               required="required"
                                               {% if track %}value="{{ track.durationHours }}"{% endif %}>
                                    </div>
                                    <div class="col-2">
                                        <label for="track-duration-minutes" class="form-label">&nbsp;</label>
                                        <input type="number" step="1" min="0" max="59" class="form-control"
                                               id="track-duration-minutes" name="durationMinutes"
                                               placeholder="Minutes" required="required"
                                               {% if track %}value="{{ track.durationMinutes }}"{% endif %}>
                                    </div>
                                    <div class="col-2">
                                        <label for="track-duration-seconds" class="form-label">&nbsp;</label>
                                        <input type="number" step="1" min="0" max="59" class="form-control"
                                               id="track-duration-seconds" name="durationSeconds"
                                               placeholder="Seconds" required="required"
                                               {% if track %}value="{{ track.durationSeconds }}"{% endif %}>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="track-averageHeartRate" class="form-label">Average Heart Rate</label>
                                <input type="number" step="1" min="0" class="form-control" id="track-averageHeartRate"
                                       name="averageHeartRate"
                                       {% if track and track.averageHeartRate is not none %}value="{{ track.averageHeartRate }}"{% endif %}>
                            </div>

                            <div class="mb-5">
                                <label for="track-elevationSum" class="form-label">Elevation Sum (in m)</label>
                                <input type="number" step="1" min="0" class="form-control" id="track-elevationSum"
                                       name="elevationSum"
                                       {% if track and track.elevationSum is not none %}value="{{ track.elevationSum }}"{% endif %}>
                            </div>

                            <button type="submit" class="btn btn-primary">Save</button>
                        </form>
                    </div>
                </div>
            </section>
        </div>

        {{ macros.scripts() }}
    </body>
</html>
