{% macro render_month(monthModel) -%}
    <div class="px-xxl-5 px-xl-4 px-lg-3">
        <h3 class="mt-4">{{ monthModel.name }}</h3>
        <div class="py-2">
            {% for goal in monthModel.goals %}
                <div class="row">
                    <div class="col col-12 mx-auto">
                        <div class="row d-flex align-items-center">
                            <div class="col col-12 d-flex align-items-center">
                                <span class="material-icons fs-5 py-1 text-light">{{ goal.type.icon }}</span>
                                <span class="me-3 text-end"
                                      style="white-space: nowrap; width: 4.75rem;">{{ goal.get_actual_value_formatted() }}</span>
                                <div class="d-inline-block" style="width: 100%; height: 100%;">
                                    {{ monthGoalsMacros.render_month_goal_progress_bar(goal) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        {% for track in monthModel.tracks %}
            {% if track.type.name == 'BIKING' %}
                {{ render_track_biking_card(track) }}
            {% elif track.type.name == 'RUNNING' %}
                {{ render_track_running_card(track) }}
            {% endif %}
        {% endfor %}
    </div>
{%- endmacro %}

<html>
    <head>
        <meta charset="UTF-8">
        <title>SportTracker - {{ gettext('Tracks') }}</title>
        {% import 'macros.jinja2' as macros with context %}
        {{ macros.header() }}
    </head>
    <body class="bg-dark text-light">
        {{ macros.navbar('tracks') }}

        {% import 'monthGoals/monthGoalsMacros.jinja2' as monthGoalsMacros with context %}

        <div id="main" class="center-align">
            <section class="p-5 text-center">
                <div class="row">
                    <div class="col col-12 mx-auto">
                        <div class="d-flex align-items-center justify-content-center">
                            <a href="{{ url_for('tracks.listTracks', year=previousMonthDate.year, month=previousMonthDate.month) }}"
                               class="text-decoration-none text-light"
                               id="month-select-previous">
                                <span class="material-icons fs-1">chevron_left</span>
                            </a>
                            <h1 class="px-3">Tracks <a href="{{ url_for('tracks.add') }}"
                                                       class="link-light text-decoration-none d-flex-inline align-items-center"><span
                                    class="rounded-circle bg-primary p-1 fs-3 material-icons">add</span></a></h1>
                            <a href="{{ url_for('tracks.listTracks', year=nextMonthDate.year, month=nextMonthDate.month) }}"
                               class="text-decoration-none text-light"
                               id="month-select-next">

                                <span class="material-icons fs-1">chevron_right</span>
                            </a>
                            <a href="{{ url_for('tracks.listTracks', year=currentMonthDate.year, month=currentMonthDate.month) }}"
                               class="text-decoration-none text-light"
                               id="month-select-current">
                                <span class="material-icons fs-2">today</span>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="row p-xxl-5 p-xl-4 p-lg-3">
                    <div class="col col-lg-6 col-s-12 px-xxl-5 px-xl-4 px-lg-3">
                        {{ render_month(monthLeftSide) }}
                    </div>
                    <div class="col col-lg-6 col-s-12 px-xxl-5 px-xl-4 px-lg-3">
                        {{ render_month(monthRightSide) }}
                    </div>
                </div>
            </section>
        </div>

        {{ macros.scripts() }}
        <script defer src="{{ url_for('static', filename='js/monthSelect.js') }}" type="text/javascript"></script>
    </body>
</html>
